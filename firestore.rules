rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¹ Permitir que cualquier usuario autenticado lea los estudiantes (pero no escriba)
    match /estudiantes/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow update: if request.auth != null;
    }

    // ðŸ”¹ Permitir que un usuario autenticado solo pueda leer su propio documento en "usuarios"
    match /usuarios/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // ðŸ”¹ Permitir lectura a cualquier usuario autenticado en "asistencias"
    match /asistencias/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // ðŸ”¹ Mantiene permisos de escritura para usuarios autenticados
    }

    // ðŸ”¹ Permitir lectura y escritura solo a administradores en cualquier otra colecciÃ³n
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    match /medidas_disciplinarias/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /mail/{document} {
  allow create: if request.auth != null || request.auth == null;
}
  }
}